{% extends 'base.html.twig' %}

{% block title %}
	{{ message.sender.name }}
	/ Touiteur
{% endblock %}

{% block body %}
	<main class="page--default">
		<div>
			<p>{{ message.content }}</p>
			<p class="comment__author">{{ message.date|date }}</p>
		</div>

		<form method="post" action="{{ path('app_messages_delete', {'id': message.id}) }}" onsubmit="return confirm('Etes-vous sÃ»r de vouloir supprimer votre message ?');">
			<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
			<button class="btn btn--touite">Supprimer</button>
		</form>
	</main>
{% endblock %}
